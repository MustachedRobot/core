{% extends 'base.html.twig' %}

{% block content %}
	<div class="row-fluid">
		<div class="span12" align="center">
			<img src="{{ site_url('/assets/img/cantineNantes.png') }}" alt=""/>

			<h2>Enregistrez votre passage</h2>
				
			{{ form_open('logger/front') | raw }}

			{{ lang('user.fields.email', 'email') | raw }}
			{{ form_input({"name": "email", "class": "input-text"}, '') | raw }}

			{{ lang('user.login.reason', 'reason_id') | raw }}
			{{ form_dropdown('reason_id', reasons) | raw }}

			{{ form_label(form_checkbox({"name": "public", "checked": "true", "value": 1 }, '')~' '~lang('user.login.public')) | raw }}

			{{ form_submit({'name': 'submit', 'value': lang('logger.submitLabel'), 'class': 'btn btn-primary'}) | raw }}

			{{ form_close() | raw }}
		</div>
	</div>
{% endblock %}